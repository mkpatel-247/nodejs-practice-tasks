<div class="py-3">
    {{> page-heading heading="Shopping cart"}}
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-8">
            {{#if items}}
            <hr />

            {{#each items}}
            <div class="cart-item py-2" data-id="{{id}}">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                        <div class="d-flex justify-content-between mb-3">
                            <div class="mx-3">
                                <h5><a href="/product/{{id}}" style="text-decoration: none;">
                                        {{capitalize this.name}}
                                    </a>
                                </h5>
                                <p>{{capitalize this.brand}}</p>
                                <h5>{{formatPrice this.price}}</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-sm-12 col-md-6 col-lg-6">
                        <div class="d-flex justify-content-between">
                            <div class="row">
                                <div class="col-12">
                                    <h6>Quantity:</h6>
                                </div>
                                <div class="col-auto">
                                    <div class="input-group mb-3">
                                        <button class="btn btn-success" type="button" id="btn-minus"
                                            data-id="{{id}}">-</button>
                                        <input type="text" class="form-control text-center" id="product-quantity"
                                            value="{{this.quantity}}" style="width: 50px;" disabled>
                                        <button class="btn btn-success" id="btn-plus" type="button"
                                            data-id="{{id}}">+</button>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <button type="button" class="btn-close" aria-label="Close" id="remove-item"
                                    data-id="{{id}}"></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            {{/each}}
            {{else}}
            <div class="row">
                <div class="col-12 text-center">
                    <h3>
                        Cart is empty!
                    </h3>
                    <a class="btn btn-outline-success" type="button" href="/">Shop now.</a>
                </div>
            </div>
            {{/if}}
        </div>
        <div class="col-12 col-sm-12 col-md-8 col-lg-4">
            <div class="bg-light rounded-3 p-4 sticky-top">
                <h6 class="mb-4">Order Summary</h6>
                <div class="d-flex justify-content-between align-items-center">
                    <div>Subtotal</div>
                    <div id="subTotal" class="fw-bold">{{formatPrice subTotal}}</div>
                </div>
                <hr />
                <div class="d-flex justify-content-between align-items-center">
                    <div>Taxes</div>
                    <div id="taxes" class="fw-bold">{{formatPrice taxes}}</div>
                </div>
                <hr />
                <div class="d-flex justify-content-between align-items-center">
                    <div>Total</div>
                    <div id="total" class="fw-bold">{{formatPrice total}}</div>
                </div>
                <button class="btn btn-primary w-100 mt-4" {{#if items}} {{else}} disabled{{/if}}>Checkout</button>
            </div>
        </div>
    </div>
</div>